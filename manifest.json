
  {
    "manifest_version": 3,
    "name": "BECER - Browser Extensions and Cookies Extension Reporter",
    "description" : "Genera un JSON amb les extensions i cookies existens en Google Chrome.",
    "version": "1.3",
    "permissions": ["cookies", "management", "storage"],
    "host_permissions": ["http://*/*", "https://*/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/i16.png",
        "32": "icons/i32.png",
        "48": "icons/i48.png",
        "128": "icons/i128.png"
      }
    },
    "icons": {
      "16": "icons/i16.png",
      "32": "icons/i32.png",
      "48": "icons/i48.png",
      "128": "icons/i128.png"
    }
  }